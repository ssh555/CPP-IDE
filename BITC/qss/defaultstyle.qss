/*-------------------------以下为“查找替换”样式-------------------------*/
/*查找、替换切换按钮*/
#btnFind, #btnReplace {
    width: 70px;
    height: 25px;
    font-family: "Microsoft YaHei";
    font-weight: normal;
    font-size: 16px;
    font-weight: bold;
    color: white;
    background-color:rgba(45, 63, 82, 0.945); 
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
    border: 2px solid;
    border-color: rgba(218, 218, 218, 0.671);
}
#btnFind:pressed, #btnReplace:pressed {
    background-color:rgb(45, 63, 82);
    padding-left: 3px;
    padding-top: 3px;
}
#btnFind:hover, #btnReplace:hover {
    background-color:rgba(45, 63, 82, 0.623);
}

/*“取消”、“上一个”、“全部”、“下一个”按钮*/
